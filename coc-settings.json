{
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["cpp", "c", "h", "hpp", "cxx", "objc", "objcpp"],
			"initializationOptions":{
				"highlight": { "lsRanges": true }
			},
      		"rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"]
		}
	},
	"git.removedSign.text": "â€”",

	"suggest.noselect": true,

	"coc.preferences.jumpCommand": "split",

	"explorer.icon.enableNerdfont": true,
	"explorer.icon.source": "vim-devicons",
	"explorer.width": 30,
	"explorer.previewAction.onHover": "labeling",
	"explorer.sources": [
		{
    		"name": "bookmark",
    		"expand": true
  		},
  		{
    		"name": "buffer",
    		"expand": false,
			"icon": "+"
  		},
  		{
    		"name": "file",
    		"expand": true
  		}
	]
}
